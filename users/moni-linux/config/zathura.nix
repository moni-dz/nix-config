{ colorscheme }:

with colorscheme.colors; {
  window-title-basename = true;
  selection-clipboard = "clipboard";

  notification-error-bg = "#${base08}";
  notification-error-fg = "#${base01}";
  notification-warning-bg = "#${base0A}";
  notification-warning-fg = "#${base01}";
  notification-bg = "#${base0B}";
  notification-fg = "#${base01}";

  completion-bg = "#${base01}";
  completion-fg = "#${base05}";
  completion-group-bg = "#${base01}";
  completion-group-fg = "#${base05}";
  completion-highlight-bg = "#${base0B}";
  completion-highlight-fg = "#${base01}";

  index-bg = "#${base01}";
  index-fg = "#${base05}";
  index-active-bg = "#${base0B}";
  index-active-fg = "#${base01}";

  inputbar-bg = "#${base01}";
  inputbar-fg = "#${base05}";
  statusbar-bg = "#${base01}";
  statusbar-fg = "#${base05}";

  highlight-color = "#${base0A}";
  highlight-active-color = "#${base0E}";

  default-bg = "#${base01}";
  default-fg = "#${base05}";

  render-loading = true;
  render-loading-fg = "#${base01}";
  render-loading-bg = "#${base05}";

  recolor-lightcolor = "#${base01}";
  recolor-darkcolor = "#${base05}";

  adjust-open = "width";
  recolor = true;
}
